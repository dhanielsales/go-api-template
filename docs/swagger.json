{
  "swagger": "2.0",
  "info": {
    "description": "A simple Golang backend scaffold",
    "title": "Golang scaffold",
    "contact": {
      "name": "Dhaniel Sales"
    },
    "license": {
      "name": "MIT"
    },
    "version": "2.0"
  },
  "basePath": "/",
  "paths": {
    "/todos": {
      "get": {
        "description": "fetch every todo available.",
        "consumes": ["*/*"],
        "produces": ["application/json"],
        "tags": ["todos"],
        "summary": "Get all todos.",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/todo.todoDB"
              }
            }
          }
        }
      },
      "post": {
        "description": "creates one todo.",
        "consumes": ["*/*"],
        "produces": ["application/json"],
        "tags": ["todos"],
        "summary": "Create one todo.",
        "parameters": [
          {
            "description": "Todo to create",
            "name": "todo",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/todo.createTodoRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/todo.createTodoResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "todo.createTodoRequest": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      }
    },
    "todo.createTodoResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        }
      }
    },
    "todo.todoDB": {
      "type": "object",
      "properties": {
        "completed": {
          "type": "boolean"
        },
        "description": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      }
    }
  }
}
